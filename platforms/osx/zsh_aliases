#!usr/bin/env zsh

if [ -d $HOME/.config/zsh_alias.d ]; then
  for file in $HOME/.config/zsh_alias.d/*.zsh; do
    source $file
  done
fi

alias ls='ls -G'
alias tmux="tmux -2"

#Git
alias push='git push origin HEAD'
alias gfdb='git branch -D'
alias pull='git pull origin HEAD'
alias gradle='/usr/local/Cellar/gradle/3.5/bin/gradle'

